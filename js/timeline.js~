// not quite a dc.js chart, writing it simply in order to
// relearn the basics. i'll probably regret this and dc-ize it later
function timeline(parent) {
    var _chart = {};
    var _x = null;
    var _width, _height;
    var _root = null, _svg;
    var _events = null; // just an array of {key: Date, value: {adds: number, dels: number}}

    _chart.x = function(scale) {
        if(!arguments.length)
            return _x;
        _x = scale;
        return _chart;
    };

    _chart.events = function(events) {
        if(!arguments.length)
            return _events;
        _events = events;
        return _chart;
    };

    _chart.redraw = function() {
        return _chart;
    };

    _chart.render = function() {
        generateSvg();
    };

    _chart.width = function(w) {
        if(!arguments.length)
            return _width;
        _width = w;
        return _chart;
    };

    function resetSvg() {
        _root.select('svg').remove();
        generateSvg();
    }

    function generateSvg() {
        _svg = _root.append('svg');
    }

    _root = d3.select(parent);
    return _chart;
}
